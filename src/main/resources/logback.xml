<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <!-- console output -->
  <appender class="ch.qos.logback.core.ConsoleAppender" name="STDOUT">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- root logger -->
  <root level="INFO">
    <appender-ref ref="STDOUT"/>
  </root>

</configuration>
